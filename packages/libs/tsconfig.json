{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
